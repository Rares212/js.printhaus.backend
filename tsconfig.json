{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": false,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@haus/db-common": [
        "libs/db-common/src"
      ],
      "@haus/db-common/*": [
        "libs/db-common/src/*"
      ],
      "@haus/api-common/": [
        "libs/api-common/src"
      ],
      "@haus/api-common/*": [
        "libs/api-common/src/*"
      ]
    }
  }
}